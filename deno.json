{
  "compilerOptions": {
    "strict": true
  },
  "lint": {
    "files": {
      "include": [
        "src/"
      ],
      "exclude": [
        "src/deps.ts"
      ]
    }
  },
  "importMap": "./import_map.json",
  "tasks": {
    "setup:ci": "deno cache --reload --lock=lock.json src/deps.ts",
    "setup": "deno cache --reload --lock=lock.json --lock-write src/deps.ts",
    "start": "deno run --allow-net=0.0.0.0:$PORT --allow-env --allow-read=.env,.env.defaults src/server.ts",
    "build": "deno compile --import-map=import_map.json --allow-net=0.0.0.0:$PORT --allow-env --allow-read=.env,.env.defaults --output dist/app src/server.ts",
    "test": "deno test",
    "coverage": "deno test --coverage=cov_profile && deno coverage --lcov cov_profile/ --output=coverage.lcov",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "docker:build": "docker build . --tag base_deno:latest",
    "docker:start": "docker run --rm -p 8000:8000 base_deno:latest"
  }
}